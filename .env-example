SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
API_SECRET=SecretTokenApi # Ganti dengan secret key Anda sendiri untuk keamanan (Sesuai dengan petujuk pada https://github.com/zulfikriyahya/attendance-machine)

BIAYA_KARTU=15000

# WhatsApp Service Configuration
WHATSAPP_ENDPOINT=https://api.whatsapp.local/send-message # Source Code https://github.com/zulfikriyahya/api-whatsapp
WHATSAPP_TIMEOUT=15

# Rate Limiting
WHATSAPP_PRESENSI_RATE=35
WHATSAPP_PRESENSI_MAX_DELAY=30
WHATSAPP_BULK_RATE=20
WHATSAPP_BULK_MAX_DELAY=2
WHATSAPP_INFORMASI_RATE=25
WHATSAPP_INFORMASI_MAX_DELAY=60

# Queue Configuration
WHATSAPP_QUEUE=default
WHATSAPP_RETRY_ATTEMPTS=3
WHATSAPP_RETRY_DELAY=60

# Monitoring Thresholds
WHATSAPP_MONITORING_ENABLED=true
WHATSAPP_QUEUE_WARNING=5000
WHATSAPP_QUEUE_CRITICAL=10000
WHATSAPP_FAILED_WARNING=20
WHATSAPP_FAILED_CRITICAL=100
WHATSAPP_HOURLY_WARNING=2000
WHATSAPP_HOURLY_CRITICAL=3000
WHATSAPP_CACHE_TTL=3600

# Alerts (optional)
WHATSAPP_ALERTS_ENABLED=false
WHATSAPP_ALERT_WEBHOOK=
WHATSAPP_ALERT_EMAILS=

# Message Configuration
WHATSAPP_INFO_MAX_LENGTH=500

# Phone Validation
WHATSAPP_PHONE_VALIDATION=true

# File Attachments
WHATSAPP_ATTACHMENTS_ENABLED=true
WHATSAPP_MAX_FILE_SIZE=16777216

# Logging
WHATSAPP_LOGGING_ENABLED=true
WHATSAPP_LOG_LEVEL=info
WHATSAPP_SUCCESS_LOG=single
WHATSAPP_ERROR_LOG=single
WHATSAPP_LOG_PAYLOAD=false
WHATSAPP_LOG_RESPONSE=true

# Testing (untuk development)
WHATSAPP_TESTING_MODE=false
WHATSAPP_MOCK_RESPONSES=false
WHATSAPP_TEST_NUMBERS=